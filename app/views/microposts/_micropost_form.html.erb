
<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "What's in ur mind...",  class: "compose" %>
    <%= f.text_field :user_id , class: "hide" %>
  </div>
  <%= f.submit "Share Now", class: "btn btn-large btn-primary button composebutton" %>
<% end %>