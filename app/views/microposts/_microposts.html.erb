  <span class="postfont">
  <table>
   <% @user.microposts.each do |micropost| %>
        <tr>
        	<td><b><%= micropost.content %></b></td>
        </tr>
        <tr>
        	<td><i>Posted <%= time_ago_in_words(micropost.created_at) %> ago </i></td>
        	<td><%= link_to 'Edit', edit_micropost_path(micropost), class: "pagelinks" %>  |  <%= link_to 'Remove', micropost, method: :delete, data: { confirm: 'Are you sure?' },  class: "pagelinks" %></td>        	
        </tr>
 		<tr> <td>----------------------------------------</td></tr>
    <% end %>
     </table>
  </span>